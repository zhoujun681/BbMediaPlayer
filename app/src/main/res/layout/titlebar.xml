<?xml version="1.0" encoding="utf-8"?>
<com.example.bbmediaplayer.view.Titlebar xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#C4000000"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="55dp">
    <ImageView
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_topbanner_logo_white"/>
    <TextView
        android:id="@+id/tv_search_title"
        android:clickable="true"
        android:layout_weight="1"
        android:drawableLeft="@drawable/tv_search_drawable_selector"
        android:background="@drawable/tv_search_bg_selector"
        android:textColor="@drawable/tv_search_text_selector"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:text="全网搜索"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_game"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_game"
            android:drawableStart="@drawable/ic_topbanner_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignEnd="@+id/tv_game"
            android:background="@drawable/dot"
            android:layout_width="6dp"
            android:layout_height="6dp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_record"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_topbanner_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</com.example.bbmediaplayer.view.Titlebar>