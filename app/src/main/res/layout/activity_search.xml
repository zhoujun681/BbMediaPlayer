<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:background="#C4000000"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/et_input"
            android:clickable="true"
            android:layout_weight="1"
            android:drawableLeft="@drawable/tv_search_drawable_selector"
            android:background="@drawable/tv_search_bg_selector"
            android:textColor="@drawable/tv_search_text_selector"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            android:hint="全网搜索"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_voice"
            android:layout_marginLeft="5dp"
            android:src="@drawable/voice"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tv_search"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:textColor="@android:color/white"
            android:text="搜索"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_nodata"
            android:visibility="gone"
            android:text="抱歉，搜不到(＾－＾)V"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>